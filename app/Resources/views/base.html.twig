<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Yalla{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('style/bulma.css') }}">
            <link rel="stylesheet" href="{{ asset('style/screen.css') }}">
        {% endblock %}
        <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}

            <!-- Somewhere in your HTML, not necessarily at the end -->
            {{ piwik("setDocumentTitle", document.title) }}
            {{ piwik("trackGoal", 1) }}

            {{ piwik_code() }}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
